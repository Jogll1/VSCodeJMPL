{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    // Symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // Symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["/*", "*/"]
    ],
    // Symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["/*", "*/"]
    ],
    // When an indent and dedent should occur
    "indentationRules": {
        "increaseIndentPattern": "^.*\\b(then|do|else)\\b\\s*$|^.*[=\\{\\(\\[]\\s*$",
        "decreaseIndentPattern": "^\\s*(else)\\b|^\\s*[\\)\\}\\]].*$"
    }
}